<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".presentation.features.notification.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/primc_light">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/keyboard_backspace_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/followRequestContainer"
        android:gravity="center"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:clickable="false"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/post_creator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow Requests"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/post_creator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramesh"/>
        </LinearLayout>
        <ImageButton
            android:clickable="false"
            android:id="@+id/more_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/chevron_right_24px"
            android:backgroundTint="@android:color/transparent"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/iconbgnotactive"
        android:layout_marginTop="8dp" />
        
    <!-- Placeholder for other notification types -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More notification types coming soon!"
            android:textSize="16sp"
            android:textColor="@color/iconbgnotactive"
            android:fontFamily="@font/lato"
            android:textAlignment="center" />
            
    </LinearLayout>

</LinearLayout>