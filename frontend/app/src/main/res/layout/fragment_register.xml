<LinearLayout
    android:id="@+id/login_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/tv_app_name"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:fontFamily="@font/anonymous_pro"
        android:textSize="32sp"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:textColor="@color/primc" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="New User? \nCreate your Account"
        android:textSize="21sp"
        android:fontFamily="@font/lato"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebtnblkbg"
        android:drawableStart="@drawable/usericon"
        android:padding="24dp"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:hint="Your Name"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        android:textAlignment="viewStart"
        android:drawablePadding="16dp"
        android:textSize="21sp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebtnblkbg"
        android:drawableStart="@drawable/id_card_48px"
        android:padding="24dp"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:hint="Your Id"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="viewStart"
        android:drawablePadding="16dp"
        android:textSize="21sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/black"
        app:hintEnabled="false"
        android:background="@drawable/whitebtnblkbg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/padlock"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:hint="Create Password"
            android:inputType="textPassword"
            android:textSize="21sp"
            android:textAlignment="viewStart"
            android:background="@drawable/whitebtnblkbg"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/select_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebtnblkbg"
        android:drawableStart="@drawable/calendar_month_24px"
        android:padding="24dp"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:hint="Date of Birth"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:drawablePadding="16dp"
        android:textSize="21sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:focusable="true"
        android:layout_marginBottom="12dp"
        app:hintEnabled="false"
        android:background="@drawable/whitebtnblkbg"
        app:boxStrokeWidth="0dp"
        app:endIconMode="dropdown_menu"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/select_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:inputType="none"
            android:drawableStart="@drawable/account_balance_48px"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:singleLine="true"
            android:background="@drawable/whitebtnblkbg"
            android:textSize="21sp"
            android:ellipsize="end"
            android:hint="Choose your command"
            android:clickable="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:letterSpacing="0.04"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:textSize="32sp"
            android:padding="20dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:background="@drawable/buttonbottomstyle" />
    </LinearLayout>
</LinearLayout>
