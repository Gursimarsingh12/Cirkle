<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".presentation.features.login.LoginFragment">

    <ImageView
        android:id="@+id/tv_app_name"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:fontFamily="@font/anonymous_pro"
        android:textSize="32sp"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:textColor="@color/primc" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Welcome"
        android:textSize="32sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Please login to continue"
        android:textSize="21sp"
        android:fontFamily="@font/lato"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold" />




    <com.google.android.material.textfield.TextInputEditText
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebtnblkbg"
        android:drawableStart="@drawable/usericon"
        android:padding="24dp"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:hint="Your Id"
        android:id="@+id/etUserId"
        android:inputType="textCapCharacters"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="viewStart"
        android:drawablePadding="16dp"
        android:textSize="21sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="12dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/black"
        app:hintEnabled="false"
        android:background="@drawable/whitebtnblkbg">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/padlock"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:background="@drawable/whitebtnblkbg"
            android:id="@+id/etPassword"
            android:paddingBottom="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="21sp"
            android:textAlignment="viewStart"/>
    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12sp"
        android:gravity="center">
        <TextView
            android:id="@+id/forgot_password"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/clickabletxt"
            android:textSize="@dimen/def_text_med_light"
            android:padding="18dp"
            />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_to_register"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New User? Create Account"
            android:textAllCaps="false"
            android:background="@drawable/newuserwhitebtnthemebg"
            android:textColor="@color/black"
            android:textSize="@dimen/def_text_med_light"
            android:padding="20dp"
            android:layout_marginHorizontal="16dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:letterSpacing="0.04"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:textSize="32sp"
            android:padding="20dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:background="@drawable/buttonbottomstyle" />

    </LinearLayout>


</LinearLayout>
