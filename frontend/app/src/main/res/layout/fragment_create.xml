<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- Top User Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_user_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:strokeWidth="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_avatar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                android:src="@drawable/account_circle_48px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lt Gen Ram Chandar Tiwari"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/text_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_id"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <com.app.cirkle.core.components.CheckMark
                        android:id="@+id/check_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:contentDescription="Private Icon"
                        android:src="@drawable/public_drawable" />
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />

            </FrameLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

<!-- ScrollView for Create Post Card -->
    <ScrollView
        android:id="@+id/scroll_view_post"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_user_info">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_create_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="4dp"
            app:strokeWidth="0dp">

            <!-- Inside Content (LinearLayout) -->
            <LinearLayout
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:paddingBottom="8dp"
                    android:text="Whatâ€™s on your mind today"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/text_post_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="start"
                    android:hint="Share your thoughts here ..."
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <FrameLayout
                    android:id="@+id/image_one_one_container"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="gone">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/image_one_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                    <ImageButton
                        android:id="@+id/remove_image_one_one"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:background="@android:color/transparent"
                        android:src="@drawable/closebtn"
                        android:contentDescription="Remove image"
                        android:visibility="visible"/>
                </FrameLayout>

                <!-- Two image container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/two_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="8dp">
                    <FrameLayout
                        android:id="@+id/image_two_one_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/image_two_two_container">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_two_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                        <ImageButton
                            android:id="@+id/remove_image_two_one"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/image_two_two_container"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_two_one_container"
                        app:layout_constraintEnd_toEndOf="parent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_two_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                        <ImageButton
                            android:id="@+id/remove_image_two_two"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Three image container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/three_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="8dp">

                    <!-- Left image: full height, half width -->
                    <FrameLayout
                        android:id="@+id/image_three_one_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/image_three_two_container">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_three_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                            
                        <ImageButton
                            android:id="@+id/remove_image_three_one"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>

                    <!-- Right column container -->
                    <LinearLayout
                        android:id="@+id/image_three_two_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_three_one_container"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- Top-right image -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="2dp">
                            
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/image_three_two"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                                
                            <ImageButton
                                android:id="@+id/remove_image_three_two"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="top|end"
                                android:background="@android:color/transparent"
                                android:src="@drawable/closebtn"
                                android:contentDescription="Remove image"
                                android:visibility="visible"/>
                        </FrameLayout>

                        <!-- Bottom-right image -->
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp">
                            
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/image_three_three"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                                
                            <ImageButton
                                android:id="@+id/remove_image_three_three"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="top|end"
                                android:background="@android:color/transparent"
                                android:src="@drawable/closebtn"
                                android:contentDescription="Remove image"
                                android:visibility="visible"/>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Four image container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:visibility="gone"
                    android:id="@+id/four_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:padding="8dp">

                    <!-- Top-Left -->
                    <FrameLayout
                        android:id="@+id/image_four_one_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/image_four_two_container"
                        app:layout_constraintBottom_toTopOf="@+id/image_four_three_container">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_four_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                            
                        <ImageButton
                            android:id="@+id/remove_image_four_one"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>

                    <!-- Top-Right -->
                    <FrameLayout
                        android:id="@+id/image_four_two_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_four_one_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/image_four_four_container">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_four_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                            
                        <ImageButton
                            android:id="@+id/remove_image_four_two"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>

                    <!-- Bottom-Left -->
                    <FrameLayout
                        android:id="@+id/image_four_three_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        app:layout_constraintTop_toBottomOf="@id/image_four_one_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/image_four_four_container"
                        app:layout_constraintBottom_toBottomOf="parent">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_four_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                            
                        <ImageButton
                            android:id="@+id/remove_image_four_three"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>

                    <!-- Bottom-Right -->
                    <FrameLayout
                        android:id="@+id/image_four_four_container"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        app:layout_constraintTop_toBottomOf="@id/image_four_two_container"
                        app:layout_constraintStart_toEndOf="@id/image_four_three_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/image_four_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                            
                        <ImageButton
                            android:id="@+id/remove_image_four_four"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:background="@android:color/transparent"
                            android:src="@drawable/closebtn"
                            android:contentDescription="Remove image"
                            android:visibility="visible"/>
                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

    <LinearLayout
        android:padding="16dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_attach_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/whitebtnblkbg"
            android:contentDescription="Attach Image"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/uploadimgicon" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_chip_selected"
            android:fontFamily="@font/lato_bold"
            android:paddingHorizontal="36dp"
            android:paddingVertical="8dp"
            android:text="Post"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

