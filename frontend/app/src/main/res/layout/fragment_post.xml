<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.features.post.fragments.PostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <!-- Profile Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                android:src="@drawable/account_circle_48px"/>

            <LinearLayout
                android:id="@+id/profile_info_container"
                android:clickable="true"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/post_creator_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lt Gen Ram Chandar Tiwari"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/post_creator_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_id"/>

                    <com.app.cirkle.core.components.CheckMark
                        android:id="@+id/account_verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:accountType="pub" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/more_options_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more_vert_48px"
                    android:contentDescription="more"
                    android:backgroundTint="@android:color/transparent"/>

                <TextView
                    android:id="@+id/post_created_before"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="19h"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Post Text -->
        <TextView
            android:id="@+id/post_text"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="#India – #US Army-to-Army Staff Talks were held in #NewDelhi from 28–30 May 2025. The deliberations focused on reviewing the ongoing bilateral defence cooperation, assessing progress across various domains, identifying key areas for enhanced ... more"
            
            android:textColor="@color/black"/>

        <!-- Image Container - All Layouts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/image_click_listeners"
            android:orientation="vertical">

            <!-- Single Image Layout -->
            <com.google.android.material.imageview.ShapeableImageView
                android:visibility="gone"
                android:id="@+id/image_one_one"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:src="@drawable/account_circle_48px"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>

            <!-- Two Images Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:clickable="true"
                android:id="@+id/two_image_container"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_two_one"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_two_two" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_two_two"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_two_one"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Three Images Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/three_image_container"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_three_one"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_three_two" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_three_two"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_three_one"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/image_three_three" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_three_three"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toBottomOf="@id/image_three_two"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_three_one"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Four Images Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/four_image_container"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_four_one"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_four_two"
                    app:layout_constraintBottom_toTopOf="@+id/image_four_three" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_four_two"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_four_one"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/image_four_four" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_four_three"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toBottomOf="@id/image_four_one"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/image_four_four"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_four_four"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/account_circle_48px"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                    app:layout_constraintTop_toBottomOf="@id/image_four_two"
                    app:layout_constraintStart_toEndOf="@id/image_four_three"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Legacy Three Images Layout (from first layout) -->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/legacy_three_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/legacy_image_one"
                    android:layout_marginEnd="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="250dp"
                    android:src="@drawable/account_circle_48px"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/legacy_image_two"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/account_circle_48px"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/legacy_image_three"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/account_circle_48px"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <com.app.cirkle.core.components.FavoriteTextView
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:favoriteState="false"
                android:text="28K"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/comments_button"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/curved_grey_rectangle"
                android:drawableStart="@drawable/comment_drawable"
                android:drawablePadding="4dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:text="230"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>

            <View
                android:id="@+id/click_able_filler_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"/>

            <com.app.cirkle.core.components.SavedImageButton
                android:id="@+id/saved"
                android:layout_marginEnd="8dp"
                app:isSaved="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_48px"
                android:contentDescription="share"
                android:background="@drawable/curved_grey_rectangle"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tweet_items_horizontal_divider_width"
            android:layout_marginTop="8dp"
            android:background="#AAAAAA" />

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/default_user_img"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    android:id="@+id/my_profile_image"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginStart="8dp"
                    android:id="@+id/comment_edit_text"
                    android:hint="Post a comment..."
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:scrollbars="horizontal"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendComment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Send"
                    app:cornerRadius="8dp"
                    android:layout_margin="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>