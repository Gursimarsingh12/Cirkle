<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/backgroundtempcol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.features.onboarding.info.OnBoardingFragment">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_app_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/anonymous_pro"
            android:textSize="32sp"
            android:gravity="center_vertical"
            android:textColor="@color/primc" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_know_more"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/greybuttonstyle"
            android:fontFamily="@font/lato"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Know More"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="11sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_image_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_onboarding_image"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/bug_icon"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="Share your moment \n join the spark"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="@font/lato_bold"
        android:textSize="32sp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/buttonbottomstyle" />

</LinearLayout>

