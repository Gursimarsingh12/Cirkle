<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bug_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_gradient_overlay" />

        </FrameLayout>

        <!-- Floating Profile Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_user_img"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"/>
        </androidx.cardview.widget.CardView>

        <!-- Buttons below profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20sp"
            android:gravity="end|center_vertical"
            android:translationY="-50dp"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingLeft="40sp"
                android:paddingRight="40sp"
                android:text="Follow"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/lato"
                android:drawablePadding="10dp"
                android:background="@drawable/newuserwhitebtnthemebg" />
        </LinearLayout>

        <!-- User Info -->
        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User_name"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/txtUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/iconbgnotactive"
                android:text="user_id" />
            <com.app.cirkle.core.components.CheckMark
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_mark"/>
        </LinearLayout>
        <!-- Follow Stats -->
        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFollowingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/iconbgnotactive"
                    android:fontFamily="@font/lato"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFollowerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/iconbgnotactive"
                    android:fontFamily="@font/lato"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bio -->
        <TextView
            android:id="@+id/txtBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Taking photos birds and flipping through spy novels"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:layout_marginStart="16dp"/>

        <!-- Interests -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:id="@+id/layoutInterests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <include layout="@layout/interest_item" />
                <include layout="@layout/interest_item" />
                <include layout="@layout/interest_item" />
                <include layout="@layout/interest_item" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/iconbgnotactive" />

        <!-- Feed RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
